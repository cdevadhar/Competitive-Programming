package labs_projects;

public class Craps {
	public static void main(String[] args) {
		int die1 = (int) (Math.random()*6+1);
		int die2 = (int) (Math.random()*6+1);
		int sum = die1+die2;
		if (sum==2 || sum==3 || sum==12) System.out.println("lost");
		if (sum==7 || sum==11) System.out.println("won");
		else {
			int currSum = -1;
			while (currSum!=sum && currSum!=7) {
				die1 = (int) (Math.random()*6+1);
				die2 = (int) (Math.random()*6+1);
				currSum = die1+die2;
			}
			if (currSum==7) System.out.println("lost");
			else System.out.println("won");
		}
		
	}
}
