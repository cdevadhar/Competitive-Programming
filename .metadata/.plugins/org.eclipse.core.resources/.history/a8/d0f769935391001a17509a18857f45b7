
public class StringCompress {
	public String compressThis(String oldString) {
		String output = "";
		int count = 1;
		char previous = oldString.charAt(0);
		for (int i = 0; i<oldString.length(); i++) {
			if (oldString.charAt(i) == previous) {
				count ++;
			}
			else {
				output += previous + count;
				previous = oldString.charAt(i);
				count = 1;
			}
		}
		return output;	
	}
	public static void main (String[] args) {
		StringCompress tester = new StringCompress();
		System.out.println(tester.compressThis("aaabbbccc"));
	}

}
