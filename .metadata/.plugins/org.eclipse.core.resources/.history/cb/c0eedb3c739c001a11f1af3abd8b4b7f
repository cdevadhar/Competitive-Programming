
public class IsRotation {
	public boolean checkSubstring(String s1, String s2) {
		if (s1.contains(s2)) {
			return true;
		}
		if (s2.contains(s1)) {
			return true;
		}
		return false;
	}
	
	public boolean isRotation(String s1, String s2) {
		String s3 = s1 + s2;
		if (s3.contains(s1) && s3.contains(s2)) {
			return true;
		}
		return false;
	}
	public static void main(String[]args) {
		IsRotation tester = new IsRotation();
		System.out.println(tester.checkSubstring("racecar", "car"));
		tester.isRotation("racecar", "carrace");
	}
}
