
public class ReplaceSpace {
	public void replaceSpace(String spaceString) {
		char[] withSpace = spaceString.toCharArray();
		int spaceCount = 0;
		for (int i = 0; i<withSpace.length; i++) {
			if (withSpace[i] == ' ') {
				spaceCount +=1;
			}
		}
		for (int i = 0; i<withSpace.length; i++) {
			if (withSpace[i] == ' ') {
				withSpace[i] = '%';
			}
			
		}
		System.out.println(withSpace);
	}
	public static void main(String[] args) {
		String test = "My name is Chinmay";
		ReplaceSpace tester = new ReplaceSpace();
		tester.replaceSpace(test);
	}

}
