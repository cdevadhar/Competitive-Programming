import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.io.FileWriter;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.BufferedReader;

public class FileTest {
	public static void main(String[] args) throws Exception {
		String homeDirectoryName = System.getProperty("user.home");
		File homedir = new File(homeDirectoryName);
		File firstFile = new File(homedir, "chinmay.txt");
		firstFile.createNewFile();
		String content = "Write this to firstFile\n";

		FileWriter fw = new FileWriter(firstFile);
		BufferedWriter bw = new BufferedWriter(fw);
		bw.write(content);
		bw.close();

		System.out.println("File Written");

		BufferedReader br;
		br = new BufferedReader(new FileReader(firstFile));
		String fileContents = br.readLine();
		System.out.println(fileContents);
		
		File testfile = new File("textfile.txt");
		
		String b = "Write this to output stream";
		OutputStream fos = new FileOutputStream(testfile);
		OutputStream output = new BufferedOutputStream(fos);
		output.write(b.getBytes());
		InputStream fis = new FileInputStream(testfile);
		InputStream input = new BufferedInputStream(fis);
		System.out.println((char)input.read(testfile));
		
	}
}
