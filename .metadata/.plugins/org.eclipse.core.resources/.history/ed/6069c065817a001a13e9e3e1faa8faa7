
public class ReplaceSpace {
	public void replaceSpace(String spaceString, int len) {
		char[] withSpace = spaceString.toCharArray();
		int spaceCount = 0;
		for (int i = 0; i<withSpace.length; i++) {
			if (withSpace[i] == ' ') {
				spaceCount +=1;
			}
		}
		int newLen = len + 2*spaceCount;
		char [] withoutSpace = new char [newLen];
		for (int i = len-1; i<=0; i--) {
			if (withSpace[i] == ' ') {
				withoutSpace[newLen - 1] = '0';
				withoutSpace[newLen - 2] = '2';
				withoutSpace[newLen - 3] = '%';
				newLen = newLen - 3;
			}
			else {
				withoutSpace[i-1] = withSpace[i];
				newLen = newLen - 1;
			}
		}
		System.out.println(String.valueOf(withoutSpace));
	}
	public static void main(String[] args) {
		String test = "My name is Chinmay";
		int leng = test.length();
		ReplaceSpace tester = new ReplaceSpace();
		tester.replaceSpace(test, leng);
	}

}
