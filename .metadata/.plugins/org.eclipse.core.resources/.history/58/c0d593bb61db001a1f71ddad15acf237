
public class Tree {
	class TreeNode {
		private int value;
		TreeNode leftChild;
		TreeNode rightChild;
		
		public TreeNode(int value) {
			this.value = value;
		}
	}
	private TreeNode root;
	
	public TreeNode addRecursively(TreeNode current, int value) {
		if (current == null ) {
			return new TreeNode(value);
		}
		if (value<current.value) {
			current.leftChild = addRecursively(current.leftChild, value);
		}
		else if (value>current.value) {
			current.rightChild = addRecursively(current.rightChild, value);
		}
		else {
			return current;
		}
		return current;
	}
	
	public void add(int value) {
	    root = addRecursively(root, value);
	}
	
	public static void main(String[] args) {
		Tree test = new Tree();
		test.add(6);
		test.add(4);
		test.add(8);
		System.out.println(test.root.value);
		
	}
	
	
	

}
