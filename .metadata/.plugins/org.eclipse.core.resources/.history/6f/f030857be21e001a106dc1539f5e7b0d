import java.util.ArrayList;

public class Tournament {
	private DebateClub hostClub;
	private String tournamentName;
	private int date;
	private ArrayList<Team> competitors;
	public Tournament(DebateClub hostClub, String tournamentName, int date) {
		competitors = new ArrayList<Team>(64);
		this.hostClub = hostClub;
		this.tournamentName = tournamentName;
		this.date = date;
	}
	public void addTeam(Team debaters) {
		competitors.add(debaters);
	}
	public void createRound(int roundNumber) {
		
	}
	public String toString() {
		return "Tournament: " + tournamentName + " held by " + hostClub.getName() + competitors;
	}
	public static void main(String[] args) {
		DebateClub SCUDebate = new DebateClub("SCUDebate");
		Tournament SCU = new Tournament(SCUDebate, "Dempsey-Cronin Inv.", 22);
		System.out.println(SCU);
		DebateClub WhsDebate = new DebateClub("WhsDebate");
		Student Chinmay = new Student("Chinmay Devadhar", 9, WhsDebate);
		Student Tharun = new Student("Tharun Sankar", 9, WhsDebate);
		Team WashingtonDevadharSankar = new Team(Chinmay, Tharun, "Washington DL");
		SCU.addTeam(WashingtonDevadharSankar);
		System.out.println(SCU);
		DebateClub Debate_Club = new DebateClub("Debate Club");
		for (int i=0; i<64; i++) {
			Student debater = new Student("Debater", 9, Debate_Club);
			Student debater2 = new Student("Debater", 9, Debate_Club);
			Team newTeam = new Team(debater, debater2, "Team " + i);
			SCU.competitors.add(newTeam);
			
		}
		System.out.println(SCU);
		
	}

}
